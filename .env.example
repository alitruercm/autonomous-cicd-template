# Environment Variables Example
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# AI Provider Configuration
# ===========================================

# Default AI Provider (groq, openai, anthropic)
AI_PROVIDER=groq

# Groq (Default Provider)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile

# OpenAI (Alternative)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# Anthropic (Alternative)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ===========================================
# Local LLM (Ollama) - Air-Gapped Fallback
# ===========================================

# Local LLM URL (Ollama default)
LOCAL_LLM_URL=http://localhost:11434

# Local model name (must be pulled first: ollama pull llama3.1:70b)
LOCAL_LLM_MODEL=llama3.1:70b

# Enable automatic fallback to local LLM if primary provider fails
AI_FALLBACK_ENABLED=true

# ===========================================
# Database Configuration
# ===========================================

DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# REDIS_URL=redis://localhost:6379

# ===========================================
# Application Configuration
# ===========================================

APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# Security
# ===========================================

SECRET_KEY=your_secret_key_here_change_in_production
# JWT_SECRET=your_jwt_secret_here

# ===========================================
# External Services
# ===========================================

# SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# Slack Notifications
# ===========================================

# Slack Incoming Webhook URL for self-heal notifications
# Get one at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXX/YYY/ZZZ

# ===========================================
# n8n Workflow Automation (Multi-Environment)
# ===========================================
# Claude Code uses these to access n8n workflows directly
# Generate API keys at: <n8n-url>/settings/api

# Default environment (used when no -e flag specified)
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# Local development environment (-e local)
# N8N_LOCAL_URL=http://localhost:5678
# N8N_LOCAL_API_KEY=your_local_n8n_key

# Production environment (-e prod)
# N8N_PROD_URL=https://n8n.yourcompany.com
# N8N_PROD_API_KEY=your_prod_n8n_key

# Staging environment (-e staging)
# N8N_STAGING_URL=https://staging-n8n.yourcompany.com
# N8N_STAGING_API_KEY=your_staging_n8n_key

# Custom environments (-e <name>)
# N8N_<NAME>_URL=https://your-n8n-instance.com
# N8N_<NAME>_API_KEY=your_api_key
